<%= form_tag cats_create_path do %>

    <div>
    <%= label_tag(:name, "Name: ") %>
    <%= text_field_tag(:name) %>



    <%= submit_tag("Create Cat") %>

    <div>

    <%= label_tag(:username, "Username: ") %>
    <%= text_field_tag(:username) %>


    <%= label_tag(:email, "Email: ") %>
    <%= text_field_tag(:email) %>


    <%= label_tag(:age, "Age: ") %>
    <%= text_field_tag(:age) %>


    <%= submit_tag("Create User") %>
    </div>

    <%= form_for @todos do |f| %>
        <%= f.label :tasks %>:
        <%= f.text_field :tasks %><br />

        <%= f.label :finished %>:
        <%= f.text_field :finished %><br />

    <%= f.submit %>
<% end %>
